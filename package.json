{
  "name": "scotiabank",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "dev:client": "ng serve --disable-host-check --open --serve-path / --proxy-config proxy.conf.json --aot",
    "dev:server": "ts-node -r tsconfig-paths/register src/server/main.ts",
    "start:dev": "nodemon",
    "start:prod": "node dist/main.js",
    "build:client": "ng build",
    "start:debug": "nodemon --config nodemon-debug.json",
    "test": "npm-run-all -p test:*",
    "test:client": "jest --config src/client/jest.config.js",
    "test:server": "jest --config src/server/jest.config.js",
    "test:server:cov": "jest --config src/server/jest.config.js --coverage",
    "test:client:cov": "jest --config src/client/jest.config.js --coverage",
    "cypress:open": "$(npm bin)/cypress open",
    "build:server": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "prestart:prod": "rimraf dist && npm run build",
    "lint": "npm-run-all -p lint:*",
    "lint:server": "tslint -p src/server/tsconfig.json",
    "lint:client": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/cdk": "~7.3.7",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@nestjs/common": "^5.7.4",
    "@nestjs/core": "^5.7.4",
    "@nestjs/typeorm": "^6.1.1",
    "@ngrx/effects": "^7.4.0",
    "@ngrx/store": "^7.4.0",
    "@ngrx/store-devtools": "^7.4.0",
    "core-js": "^2.5.4",
    "hammerjs": "^2.0.8",
    "node-sass": "^4.12.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "~6.3.3",
    "sqlite3": "^4.0.8",
    "tslib": "^1.9.0",
    "typeorm": "^0.2.17",
    "typescript": "~3.2.2",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.3",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^23.3.14",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "codelyzer": "~4.5.0",
    "cypress": "^3.3.0",
    "husky": "^2.3.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "24.1.0",
    "jest-preset-angular": "^6.0.2",
    "jest-sonar-reporter": "^2.0.0",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.2",
    "protractor": "~5.4.0",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "typescript": "~3.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test",
      "pre-push": "yarn lint && yarn test",
      "commit-msg": "commitlint -e"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
